doctype html

mixin tableOfContents()
    table: tr: td(style="min-width: 20vw")
        h2 Contents
        hr
        ul
            if block
                block

html(lang="en_us")
    head
        block title

        block meta
            meta(charset="UTF-8")
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            meta(name="author" content="Brody Liudzius")

        block stylesheets
            link(rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/andrewh0/okcss@1/dist/ok.min.css")
            link(rel="shortcut icon" type="image/x-icon" href="/notes.png")
            link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/default.min.css")



        block scripts
            script(type="module" src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js" async id="MathJax-script")
            script(src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js")
            script hljs.highlightAll()
    
    body
        header
            block header
                a(href="/") Home
        
        main
            block main
                p This page is just a template. Please navigate back to safety ^
        
        footer
            - year = new Date().getFullYear();
            center: small Copyright Â© #{year} Brody Liudzius